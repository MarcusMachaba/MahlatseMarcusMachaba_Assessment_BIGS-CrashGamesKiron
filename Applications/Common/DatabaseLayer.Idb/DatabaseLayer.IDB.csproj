<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net8.0</TargetFrameworks>
    <Company>MarcusMachaba</Company>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Data Access Layer (Uses Idb and falls under custom Code First)</Description>
    <Copyright>MarcusMachaba 2025</Copyright>
    <Version>1.0.0</Version>
    <Authors>Marcus Machaba</Authors>
    <PackageReleaseNotes>Initial  CF-DataAccessLayer release</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="SQLConfigs\sp_AlterTable_AddColumn.sql" />
    <None Remove="SQLConfigs\sp_AlterTable_DropColumn.sql" />
    <None Remove="SQLConfigs\sp_GetForeignKeyInfo.sql" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="SQLConfigs\sp_AlterTable_AddColumn.sql" />
    <EmbeddedResource Include="SQLConfigs\sp_AlterTable_DropColumn.sql" />
    <EmbeddedResource Include="SQLConfigs\sp_GetForeignKeyInfo.sql" />
    <EmbeddedResource Include="SQLConfigs\sp_GetTablePrimaryKeyColumns.sql" />
    <EmbeddedResource Include="SQLConfigs\sp_GetTableColumns.sql" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Data.SqlClient" Version="4.9.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Logger\Logger.csproj" />
  </ItemGroup>

</Project>
